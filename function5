def show_balance ():
    print(f"Your balance ${balance}")

def deposit ():
    amount = (float(input("Enter deposit amount: ")))
    if amount < 0:
        print("invalid amount")
        return 0
    else:
        return amount

def withdrawal ():
    amount =(float(input("Enter withdrawal amount: ")))
    if amount > balance:
        print("Insufficent balance")
    elif amount < 0:
        print("The amount is greater than 0")
    else:
        return amount

balance = float(0)
select = True

while select:
    print("1.Show balance")
    print("2.Deposit")
    print("3.withdrawal")
    print("4.exit")
    choice =input("Select your choice: ")

    if choice == "1":
        show_balance()
    elif choice == "2":
        balance += deposit() 
    elif choice == "3":
        balance -= withdrawal()
    elif choice == "4":
        select = False
    else:
        print("Invalid number")
